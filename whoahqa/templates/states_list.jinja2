{% extends "base.jinja2" %}
{% block title %}{{ gettext("Brazil") }}{% endblock %}
{% block page_title %} {{ self.title() }} {% endblock %}
{% block breadcrumbs %}
{% endblock %}
{% block sub_menu_item %}
  <li class="selected">
    <span id="menu-icon" class="icon-plus-sign state"></span>
    <a href="{{request.route_url('states', traverse=())}}">
        {{ gettext('States') }}
    </a>
    <input type="checkbox" name ="group-1" id="chkbx" style="top: 0px;
    left: 24px;">
  {%if request.can_list_state %}
  <ul class="sub-location temp" id="states-list" style="list-style: none;">
    {% for state in locations %}
    <li style="margin: 0 auto;
    padding: 5px;
    margin-top: 1px !important; white-space: nowrap;" class="sub-state">
    <input type="checkbox" name ="group-2" id="chkbx" style="top: -5px;
    left: 1px;">
      <a href="{{state.get_url(request, period)}}" style="color: #def1fd;
    margin: 0px 20px 0px 15px; font-weight: 300;
    font-size: 14px; display: block;">
          {{ state.name|format_location_name }}
          {{ gettext(state.location_type|capitalize) }}
      </a>
      <span class="icon-plus-sign locations-list" id="menu-icon" style="margin: -17px -27px 1px 1px;"></span>
      <ul class="sub-location temp" id="municipality-list" style="list-style: none;">
      {% for municipality in state.children() %}
        <li style="margin: 0 auto; padding: 5px; margin-top: 1px !important; position: relative;" class="states-list">
        <a href="{{municipality.get_url(request, period)}}" style="color: #def1fd;margin: 0px 20px 0px 20px; font-weight: 300; font-size: 14px; display: block; white-space: initial;">
            {{ municipality.name|format_location_name }}
            {{ gettext(municipality.location_type|capitalize) }}
        </a>
      </li>
      {% endfor %}
      </ul>
      </li>
    {% endfor %}
    </ul>
  {% endif %}
  </li>
{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-12">
      {% block location_table %}
        <form method="post" action="">
            <div class="location_table">
              {% include '_summary_scores_table.jinja2' %}
            </div>
        </form>
      {% endblock %}
    </div>
  </div>
{% endblock content %}
{% block page_scripts %}
{% endblock %}
