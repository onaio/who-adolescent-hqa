{% extends "base.jinja2" %}
{% block title %}{{ gettext("States") }}{% endblock %}
{% block page_title %} {{ self.title() }} {% endblock %}
{% block breadcrumbs %}
{% endblock %}
{% block sub_menu_item %}
  <li class="selected">
    <a href="{{request.route_url('states', traverse=())}}">
        {{ gettext('States') }}
    </a>
    <span class="icon-plus-sign locations-list collapsed" data-toggle="collapse" data-target="#states-list"></span>
  </li>
  {%if request.can_list_state %}
  <li class="sub-location collapse" id="states-list">
    {% for state in states %}
    <div style="margin: 0 auto;
    padding: 5px;
    margin-top: 1px !important;">
      <a href="{{state.get_url(request, period)}}" style="color: #def1fd;
    margin: 0px 30px 0px 35px; font-weight: 300;
    font-size: 14px; display: block;">
          {{ state.name|format_location_name }}
          {{ gettext(state.location_type|capitalize) }}
      </a>
      <span class="icon-plus-sign locations-list collapsed" data-toggle="collapse" data-target="#municipality-list"></span>
      </div>
      <li class="sub-sub-location collapse" id="municipality-list">
      {% for municipality in state.children() %}
        <div style="margin: 0 auto;
    padding: 5px;
    margin-top: 1px !important;">
      <a href="{{municipality.get_url(request, period)}}" style="color: #def1fd;
    margin: 0px 30px 0px 50px; font-weight: 300;
    font-size: 14px; display: block;">
          {{ municipality.name|format_location_name }}
          {{ gettext(municipality.location_type|capitalize) }}
      </a>
      </div>
      {% endfor %}
      </li>
    {% endfor %}
    </li>
  {% endif %}
{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-12">
      {% block location_table %}
        <form method="post" action="">
            <div class="location_table">
              {% include '_summary_scores_table.jinja2' %}
            </div>
        </form>
      {% endblock %}
    </div>
  </div>
{% endblock content %}
