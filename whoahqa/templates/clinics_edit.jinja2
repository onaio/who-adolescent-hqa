{% extends 'base.jinja2' %}
{% block title %}Edit User{% endblock %}
{% block page_title %} {{ self.title() }} {% endblock %}
{% block breadcrumbs %}
    <li><i class="icon-angle-right"></i></li>
    <li class="active">{{ gettext("Manage Clinics")}}</li>
    <li><i class="icon-angle-right"></i></li>
    <li>{{clinic.name or "New Clinic"}}</li>
{% endblock %}
{% block content %}

<!-- Main content -->
<section class="content">
  {% include '_alerts.jinja2' %}
  <div class="row">
    <div class="col-md-12">
      <div class="portlet">
        <div class="portlet-body table-responsive no-padding">
          <form class="form-horizontal" data-role="form" method="post">
              <div class="portlet-body">
                <div class="form-group">
                  {% if has_error %}
                    {% for msg in field.error.messages() %}
                      <span class="help-block">{{ msg }}</span>
                    {% endfor %}
                {% endif %}
                </div>
                {% for field in form %}
                  {% set has_error = field.error %}
                  <div class="form-group {% if has_error %}has-error{% endif %}">
                      <label class="col-sm-2 control-label">{{ field.title }}</label>
                      <div class="col-sm-2">
                          {{ field.serialize()|safe }}
                      </div>
                      {% if has_error %}
                        {% for msg in field.error.messages() %}
                          <span class="help-block">{{ msg }}</span>
                        {% endfor %}
                      {% endif %}
                  </div>
                {% endfor %}
              </div>
              <div class="portlet-footer">
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    {% if clinic.id %}
                      <a class="btn btn-danger" href="{{ request.route_url('clinics', traverse=(clinic.id, 'delete')) }}">Delete</a>
                    {% endif %}
                    <a class="btn btn-default" href="{{ request.route_url('clinics', traverse=('manage')) }}">Back</a>
                  </div>
                </div>
              </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
