{% extends 'base.jinja2' %}
{% block title %}Users{% endblock %}
{% block page_title %} {{ self.title() }} {% endblock %}
  
{% block breadcrumbs %}
    <li><a href="#">Users</a></li>
{% endblock %}

{% block content %}
<!-- Main content -->
<section class="content">
  {% include "_alerts.jinja2" %}
  <div class="row">
    <div class="col-md-12">
      <div class="portlet">
        <div class="portlet-body table-responsive no-padding">
          <form method="post">
            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
            <table class="table table-hover">
              <thead>
              <tr>
                <th>{{ gettext('Username')}}</th>
                <th>{{ gettext('Role')}}</th>
                <th>{{ gettext('Location List / Clinic')}}</th>
                <th>{{ gettext('Actions')}}</th>
              </tr>
              </thead>
              <tbody>
              {% for ona_user in users|sort(true, attribute='user.id') %}
              {% set is_current_user = request.ona_user == ona_user %}
                <tr>
                  <td>{{ ona_user.username }}</td>
                  <td>{{ ona_user.group|capitalize }}</td>
                  <td>
                    {% if ona_user.location is not none%}
                      {{ ona_user.location.name|format_location_name }} 
                      {{ ona_user.location.location_type|format_location_name }}
                    {% else %}
                      {% for clinic in ona_user.clinics %}
                        {{ clinic.name|format_location_name }}
                      {% endfor %}
                    {% endif %}
                  </td>
                  <td>
                    <a class="btn btn-default btn-xs" href="{{ request.route_path('admin', traverse=(ona_user.user.id, 'edit')) }}">{{ gettext('Edit')}}</a>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /.content -->
{% endblock %}