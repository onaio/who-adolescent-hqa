{% extends 'base.jinja2' %}
{% block title %}Users{% endblock %}
{% block page_title %} {{ self.title() }} {% endblock %}
  
{% block breadcrumbs %}
    <li><a href="#">Users</a></li>
{% endblock %}

{% block content %}
<!-- Main content -->
<section class="content">
  {% include "_alerts.jinja2" %}
  <div class="row">
    <div class="col-md-12">
      <div class="portlet">
        <div class="portlet-body table-responsive no-padding">
          <form method="post">
            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
            <table class="table table-hover">
              <thead>
              <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              {% for ona_user in users|sort(true, attribute='user.id') %}
              {% set is_current_user = request.ona_user == ona_user %}
                <tr>
                  <td>{{ ona_user.username }}</td>
                  <td>{{ ona_user.group|capitalize }}</td>
                  <td>
                    {% if not is_current_user %}
                      <a class="btn btn-default btn-xs" href="{{ request.route_path('admin', traverse=(ona_user.user.id, 'edit')) }}">Edit</a>
                    {% endif %} 
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /.content -->
{% endblock %}