<div id="sample_1_wrapper" class="dataTables_wrapper form-inline"
     role="grid">
  <div class="table-responsive">
    <table
        class="table table-striped table-bordered table-hover"
        id="sample_1" aria-describedby="sample_1_info">
      <thead>
      <tr role="row" class="score_summary_header_1">
            <th colspan=2> Characteristics</th>
            <th colspan={{ clinics|length }}> Scores</th>
      </tr>
      <tr role="row" class="score_summary_header_2">
        <th class="sorting" role="columnheader" tabindex="0"
            aria-controls="sample_1" rowspan="1" colspan="1"
            aria-label="No."
            style="width: 30px;">
            No.
        </th>

        <th class="sorting_disabled" role="columnheader" rowspan="1"
            colspan="1" aria-label="Description" style="width: 46px;">
            Description
        </th>

        {% for clinic in clinics %}
            <th class="sorting_disabled" role="columnheader" rowspan="1"
            colspan="1" aria-label="Clinic Name" style="width: 186px;">
            {{ clinic.name }}
            </th>
        {% endfor %}

      </tr>
      </thead>

      <tbody role="alert" aria-live="polite" aria-relevant="all">
      {% for characteristic in characteristics %}
        <tr class="gradeX odd">
          <td class=" ">
              {{loop.index }}
          </td>
          </td>
          <td class=" " style="word-wrap: break-word">{{ characteristic.description }}</td>
           {% for clinic in clinics %}
            <td class="center">
              {% if clinic_scores[clinic.id][characteristic.id]['total_percentage'] %}
                    {{clinic_scores[clinic.id][characteristic.id]['total_percentage'] }} %
               {% else %}
                    0 %
                {% endif%}
            </td>
           {% endfor %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>