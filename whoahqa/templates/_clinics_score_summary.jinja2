{% from 'macros/score_class.jinja2' import score_class %}
<div id="sample_1_wrapper" class="" role="grid">
    <div class="row">
      <div class="score-summary-table">
        <table
            class="table table-hover"
            id="score_summary" aria-describedby="sample_1_info">
          <thead>
          <tr role="row" class="score_summary_header_1">
                <th colspan=2> {{ gettext('Characteristics') }}</th>
                <th colspan={{ clinics|length }}> {{ gettext("Scores") }}</th>
          </tr>
          <tr role="row" class="score_summary_header_2">
            <th class="sorting lasttd" role="columnheader" tabindex="0"
                aria-controls="sample_1" rowspan="1" colspan="1"
                aria-label="No."
                style="width: 30px;">
                {{ gettext('No.') }}
            </th>
            <th class="sorting_disabled ssdata" role="columneader" rowspan="1"
                colspan="1" aria-label="{{ gettext('Description') }}" style="width: 46px;">
                {{ gettext('Description') }}
            </th>
             {% for clinic in clinics %}
                <th class="sorting_disabled" role="columnheader" rowspan="1"
                colspan="1" aria-label="{{ gettext("Clinic Name") }}">
                <div style="width:84px">
                    {{ clinic.name }}
                </div>
                </th>
            {% endfor %}
          </tr>
          </thead>
          <tbody role="alert" aria-live="polite" aria-relevant="all">
          {% for characteristic in characteristics %}
            <tr class="gradeX odd ssdata">
              <td class="lasttd">
                  <div style="width:51px">
                    {{loop.index }}
                  </div>
              </td>
              </td>
              <td class="lasttd" style=""><div style="width:379px;">{{ characteristic.description }}</div></td>
              {% for clinic in clinics %}
                <td>
                    <div class="td-scores">
                        {{score_class(clinic_scores[clinic.id][characteristic.id]['total_percentage'], score_limits)}}
                    </div>
                </td>
              {% endfor %}
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
</div>