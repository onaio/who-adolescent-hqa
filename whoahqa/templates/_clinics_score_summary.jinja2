<div id="sample_1_wrapper" class="dataTables_wrapper form-inline"
     role="grid">
  <div class="table-scrollable">
    <table
        class="table table-striped table-bordered table-hover"
        id="sample_1" aria-describedby="sample_1_info">
      <thead>
      <tr role="row">
            <th colspan=2> Characteristics</th>
            <th colspan=1> Scores</th>
      </tr>
      <tr role="row">
        <th class="sorting" role="columnheader" tabindex="0"
            aria-controls="sample_1" rowspan="1" colspan="1"
            aria-label="No."
            style="width: 30px;">
            No.
        </th>

        <th class="sorting_disabled" role="columnheader" rowspan="1"
            colspan="1" aria-label="Description" style="width: 46px;">
            Description
        </th>

        {% for clinic in clinics %}
            <th class="sorting_disabled" role="columnheader" rowspan="1"
            colspan="1" aria-label="Clinic Name" style="width: 186px;">
            {{ clinic.name }}
            </th>
        {% endfor %}

      </tr>
      </thead>

      <tbody role="alert" aria-live="polite" aria-relevant="all">
      </tbody>
      {% for characteristic in characteristics %}
        <tr class="gradeX odd">
          <td class=" ">
              {{loop.index }}
          </td>
          </td>
          <td class=" " style="word-wrap: break-word">{{ characteristic.description }}</td>
           {% for clinic in clinics %}
            <td class="center">
              {% if clinic_scores[clinic.id][characteristic.id]['total_percentage'] %}
                    {{clinic_scores[clinic.id][characteristic.id]['total_percentage'] }} %
                    {{ clinic_scores[clinic.id][characteristic.id]['total_scores'] }}
               {% else %}
                    0 %
                {% endif%}
            </td>
           {% endfor %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-5 col-sm-12">
      <div class="dataTables_info" id="sample_1_info">Showing 1 to 5
        of 25 entries
      </div>
    </div>
    <div class="col-md-7 col-sm-12">
      <div class="dataTables_paginate paging_bootstrap">
        <ul class="pagination">
          <li class="prev disabled"><a href="#" title="Prev"><i
              class="icon-angle-left"></i></a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li class="next"><a href="#" title="Next"><i
              class="icon-angle-right"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</div>