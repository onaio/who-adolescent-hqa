{% extends 'base.jinja2' %}
{% block title %}Users{% endblock %}
{% block page_title %}
    <h3>{{ self.title() }}</h3>
{% endblock %}

{% block breadcrumbs %}
    <li>
      <a href="{{ request.route_url('locations', traverse=()) }}"><iclass="fa fa-desktop"></i>  Locations
      </a>
    </li>
    <i class="icon-angle-right"></i>
    <li class="active">
      {% if location %}
        Edit Location
      {% else %}
        New Location
      {% endif %}
    </li>
</li>
{% endblock %}

{% block content %}
<section class="container">
    {% include '_alerts.jinja2' %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-title">
                    <strong>Location Form</strong>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" method="post">
                        <div class="form-body">
                        {% for field in form %}
                            {% set has_error = not not field.error %}
                            <div class="form-group {% if has_error %}has-error{% endif %}">
                                <label for="inputEmail3" class="col-sm-2 control-label">{{ field.title }}</label>

                                <div class="col-sm-2">
                                  {{ field.serialize()|safe }}
                                </div>
                                {% if has_error %}
                                  {% for msg in field.error.messages() %}
                                <span class="help-block">{{ msg }}</span>
                                  {% endfor %}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a class="btn btn-default" href="{{ request.route_url('admin', traverse=()) }}">Cancel</a>
                            </div>
                        </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}