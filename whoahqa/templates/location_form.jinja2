{% extends 'base.jinja2' %}
{% block title %}Users{% endblock %}
{% block page_title %}
    <h3>{{ self.title() }}</h3>
{% endblock %}

{% block breadcrumbs %}
    <li>
      <a href="{{ request.route_url('locations', traverse=()) }}"><iclass="fa fa-desktop"></i>  Locations
      </a>
    </li>
    <i class="icon-angle-right"></i>
    <li class="active">
      {% if location %}
        {{ gettext('Edit Location') }}
      {% else %}
        {{ gettext('New Location') }}
      {% endif %}
    </li>
</li>
{% endblock %}

{% block content %}
<!-- Delete confirmation modal -->
<div class="modal fade" id="delete-confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title">Confirm Delete</h4>
        </div>
        <div class="modal-body">
          You are about to delete
          <strong>
          {{ location.name }}
          </strong>. This procedure is irreversible.
            <br/>
          Do you wish to proceed?
        </div>
        <div class="modal-footer">
          <a href="{{ request.route_path('locations', traverse=(location.id, 'delete')) }}" class="btn btn-danger">Delete</a>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        <!-- /.modal-content -->
      </div>
        <!-- /.modal-dialog -->
    </div>
</div>
<!-- End Delete confirmation modal -->
<section class="container">
    {% include '_alerts.jinja2' %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-title">
                    <strong>{{ gettext('Location Form') }}</strong>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" method="post">
                        <div class="form-body">
                        {% for field in form %}
                            {% set has_error = not not field.error %}
                            <div class="form-group {% if has_error %}has-error{% endif %}">
                                <label for="inputEmail3" class="col-sm-2 control-label">{{ gettext(field.title) }}</label>

                                <div class="col-sm-2">
                                  {{ field.serialize()|safe }}
                                </div>
                                {% if has_error %}
                                  {% for msg in field.error.messages() %}
                                <span class="help-block">{{ gettext(msg) }}</span>
                                  {% endfor %}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">{{ gettext('Save')}}</button>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#delete-confirm">Delete</button>
                                <a class="btn btn-default" href="{{ request.route_url('locations', traverse=()) }}">{{ gettext('Cancel') }}</a>
                            </div>
                        </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}