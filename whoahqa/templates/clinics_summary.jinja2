{% extends "base.jinja2" %}
{% block title %}{{ gettext("Scores") }}{% endblock %}
{% block page_title %} {{ self.title() }} {% endblock %}

{% if parent and parent.location_type == 'state' %}
  {% block sub_menu_item %}
    <li>
      <a href="{{request.route_url('states', traverse=(parent.id, period.id))}}">
          {{ parent.name|capitalize }}
      </a>
    </li>
    {% for location in locations %}
      <li class="sub-location">
        <a href="{{request.route_url('municipalities', traverse=(location.id, period.id))}}">
            {{ location.name|capitalize }}
        </a>
      </li>
    {% endfor %}
  {% endblock %}
{% endif %}

{% block breadcrumbs %}
  {% if parent and parent.location_type == 'state' %}
    <li>{{ parent.name }}</li>
    <li><i class="icon-angle-right"></i></li>
    <li>
      <a href="{{ parent.get_url(request, period) }}">
        {{ gettext("Municipalities") }}
      </a>
    </li>
  {% endif %}
  {% if parent and parent.location_type == 'municipality' %}
    <li>{{ parent.name|capitalize }}</li>
    <li><i class="icon-angle-right"></i></li>
    <li>
      <a href="{{ parent.get_url(request, period) }}">
        {{ gettext("Clinics") }}
      </a>
    </li>
  {% endif %}
  <li><i class="icon-angle-right"></i></li>
  <li>{{ self.page_title() }}</li>
  <li><a href="#"> </a></li>
{% endblock %}
{% block content %}
  <div class="row">
    <!--
    <div style="margin-left:0px; margin-bottom:5px;" class="row">
        <div class="col-md-2 form-group">
           <input id="search_term" name="search_term" type="text" class="form-control" placeholder="Search clinics..."/>
        </div>
    </div>
    -->
    <div class="col-md-12">
      {% block clinic_table %}
        <form method="post" action="">
            <div class="clinics_table">
              {% include '_summary_scores_table.jinja2' %}
            </div>
        </form>
      {% endblock %}
    </div>
  </div>
{% endblock content %}
{% block page_scripts %}
  <script src="{{ request.static_url('whoahqa:static/scripts/custom.js') }}"></script>
{% endblock %}
{% block jquery_ready %}
  {{ super() }}
  Custom.filterClinicTable();
{% endblock %}
